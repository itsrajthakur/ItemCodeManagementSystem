@model Identity.Models.Product

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="bg-light py-3 py-md-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5 col-xxl-4">
                <div class="card border border-light-subtle rounded-3 shadow-sm">
                    <div class="card-body p-3 p-md-4 p-xl-5">
                        <h4 class="text-center">Edit Item</h4><hr />
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Id" />
                            <div class="row gy-2 overflow-hidden">
                                <div class="col-12">
                                    <div class="form-floating">
                                        <input asp-for="ItemCode" class="form-control" id="ItemCode" placeholder="ItemCode">
                                        <label asp-for="ItemCode" class="form-label"></label>
                                        <span asp-validation-for="ItemCode" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating">
                                        <input asp-for="Description" class="form-control" id="Description" placeholder="Description">
                                        <label asp-for="Description" class="form-label"></label>
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating">
                                        <input asp-for="Price" class="form-control" id="Price" placeholder="Price">
                                        <label asp-for="Price" class="form-label"></label>
                                        <span asp-validation-for="Price" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating">
                                        <input asp-for="Unit" class="form-control" id="Unit" placeholder="Unit">
                                        <label asp-for="Unit" class="form-label"></label>
                                        <span asp-validation-for="Unit" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating">
                                        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control" id="CategoryId" placeholder="Category"></select>
                                        <label asp-for="CategoryId" class="form-label">Category</label>
                                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12 d-flex gap-1">
                                    <div class="d-grid my-3 col-6">
                                        <button class="btn btn-success btn-lg" type="submit">Save</button>
                                    </div>
                                    <div class="d-grid my-3 col-6">
                                        <a class="btn btn-danger btn-lg" asp-action="Index">Cancle</a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
