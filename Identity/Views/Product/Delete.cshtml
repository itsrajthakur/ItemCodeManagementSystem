@model Identity.Models.Product

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="bg-light py-3 py-md-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5 col-xxl-4">
                <div class="card border border-light-subtle rounded-3 shadow-sm">
                    <div class="card-body p-3 p-md-4 p-xl-5">
                        <h4 class="text-center">Delete Item</h4><hr />
                        <h2 class="fs-6 fw-normal text-center text-secondary mb-4">Are you sure you want to delete this Item?</h2>
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Id" />
                            <div class="row gy-2 overflow-hidden">
                                <div class="col-12 d-flex">
                                    <dt class="col-sm-6">
                                        @Html.DisplayNameFor(model => model.ItemCode)
                                    </dt>
                                    <dd class="col-sm-6">
                                        @Html.DisplayFor(model => model.ItemCode)
                                    </dd>
                                </div>
                                <div class="col-12 d-flex">
                                    <dt class="col-sm-6">
                                        @Html.DisplayNameFor(model => model.Description)
                                    </dt>
                                    <dd class="col-sm-6">
                                        @Html.DisplayFor(model => model.Description)
                                    </dd>
                                </div>
                                <div class="col-12 d-flex">
                                    <dt class="col-sm-6">
                                        @Html.DisplayNameFor(model => model.Price)
                                    </dt>
                                    <dd class="col-sm-6">
                                        @Html.DisplayFor(model => model.Price)
                                    </dd>
                                </div>
                                <div class="col-12 d-flex">
                                    <dt class="col-sm-6">
                                        @Html.DisplayNameFor(model => model.Unit)
                                    </dt>
                                    <dd class="col-sm-6">
                                        @Html.DisplayFor(model => model.Unit)
                                    </dd>
                                </div>
                                <div class="col-12 d-flex">
                                    <dt class="col-sm-6">
                                        @Html.DisplayNameFor(model => model.CategoryId)
                                    </dt>
                                    <dd class="col-sm-6">
                                        @Html.DisplayFor(model => model.CategoryId)
                                    </dd>
                                </div>
                                <div class="col-12 d-flex gap-1">
                                    <div class="d-grid my-3 col-6">
                                        <button class="btn btn-success btn-lg" type="submit">Delete</button>
                                    </div>
                                    <div class="d-grid my-3 col-6">
                                        <a class="btn btn-danger btn-lg" asp-action="Index">Cancle</a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>